@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Role Details";
}

    <div class="jumbotron" style="margin-top:40px;">

        <h2 style="margin-top: -20px;">@ViewBag.Title </h2>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
        <hr />
        <div class="col-md-4">
            <h4>Role Name</h4>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>

        </div>

        <div class="col-md-8">
            <h4>List of users in this role</h4>
            @if (ViewBag.UserCount == 0)
            {
                <hr />
                <p>No users found in this role.</p>
            }

            <table class="table table-striped table-hover">

                @foreach (var item in ViewBag.Users)
                {
                    <tr>
                        <td>
                            @item.UserName
                        </td>
                    </tr>
                }
            </table>

        </div>

        <p>

            <hr />

            <br />

            @Html.ActionLink("Back to List", "Index")

        </p>


    </div>
